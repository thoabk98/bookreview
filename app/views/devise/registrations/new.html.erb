<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/devisemes", resource: resource %>
  <div class="field">
    <%= f.label t('user.username') %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label t('user.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('user.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('user.sign_up.character_minimum') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('user.sign_up.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('user.sign_up.label') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
