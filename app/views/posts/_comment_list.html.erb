<% post.comments.each do |comment| %>
<div class="list-group-item">
  <div class="row">
    <div class="col-xs-2 col-md-1">
      <%= image_tag avatar_url(comment.user), class: "img-circle img-responsive", :size => '60x60'%>
    </div>
    <div class="col-xs-10 col-md-11">
      <div>
        <div class="mic-info">
          <span class="badge badge-dark"> <%=comment.user.username%></span>
          <span class="post-time"><em><%= time_ago_in_words(comment.created_at) %> <%= t('datetime.ago') %></em></span>
        </div>
      </div>
      <div class="comment-text">
        <span class="h6"><%= comment.content %></span>
      </div>
      <% if comment.user == current_user %>
        <div class="action">
          <div class="clearfix">
            <div class="form-action pull-right">
              <%= link_to(t('post.comment.delete'),comment_path(comment), method: :delete, remote: true,class: "btn btn-danger btn-round")%>
            </div>
          </div>
        </div>
      <% end %>                            
    </div>
  </div>
</div>
<% end %>