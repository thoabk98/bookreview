<div class="container">
<%if params[:category_id]%>
	<section class="featured-posts">
    <div class="section-title">
      <h2><span><%=Category.find(params[:category_id]).title%></span></h2>
		</div>
		<div class="card-columns listfeaturedtag">
    <% @posts.order(created_at: :desc).each do |p| %>
			<%=render 'post', p: p%>
    <%end%>
		</div>
	</section>
<%else %>
<%Category.all.each do|c| %>
	<section class="featured-posts">
    <div class="section-title">
      <h2><span><%=c.title%></span></h2>
		</div>
		<div class="card-columns listfeaturedtag">
    <% c.posts.order(created_at: :desc).limit(4).each do |p| %>
			<%=render 'post', p: p%>
    <%end%>
		</div>
	</section>
<%end%>
<%end%>
</div>