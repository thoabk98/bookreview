<div class="container">
<div class = "text-editor">
  <%= form_for @post,:html => {class: "form"} do |f| %>
    <div class="row">
      <div class="col-9">
        <div class="form-group">
          <label for="title"><%= t('post.new.title') %></label>
          <input type="text" class="form-control" id="title" name="post[title]">
        </div>
      </div>

      <div class="col-3">
        <div class="form-group">
          <label for="category"><%= t('post.new.category') %></label>
          <select class="form-control" id="category" name="post[category_id]">
          <% Category.all.each do |category| %>
            <option value="<%= category.id %>"><%= category.title %></option>
          <% end %>
          </select>
        </div>
      </div>
    </div>
    
    <%=f.text_area :content, class: "ckeditor"%><br>

    <div class="row">
      <div class="col">
        <div><label for="category"><%= t('post.new.cover') %></label></div>
        <div><%= f.file_field :cover, accept: "image/jpeg,image/gif,image/png" %></div>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col">
        <div class="form-group">
          <%=f.submit 'Save', class: "btn btn-primary btn-round"%>
        </div>
      </div>
    </div>
    
  <%end%>
  </div>
</div>